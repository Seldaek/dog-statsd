{
    "name": "graze/dog-statsd",
    "description": "DataDog StatsD Client",
    "keywords": [
        "graze",
        "dog-statsd",
        "statsd",
        "datadog",
        "dogstatsd"
    ],
    "homepage": "https://github.com/graze/dog-statsd",
    "license": "MIT",
    "authors": [
        {
            "name": "Harry Bragg",
            "email": "harry.bragg@graze.com",
            "role": "Developer"
        },
        {
            "name": "Graze Developers",
            "email": "developers@graze.com",
            "homepage": "http://www.graze.com",
            "role": "Development Team"
        }
    ],
    "require": {
        "php": ">=5.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "^2.3",
        "johnkary/phpunit-speedtrap": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Graze\\DogStatsD\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Graze\\DogStatsD\\Test\\": "tests/src",
            "Graze\\DogStatsD\\Test\\Unit\\": "tests/unit"
        }
    },
    "scripts": {
        "test": [
            "composer lint --quiet",
            "composer test:unit --quiet"
        ],
        "test:unit": [
            "vendor/bin/phpunit --colors=always --testsuite unit"
        ],
        "test:coverage": [
            "vendor/bin/phpunit --coverage-text"
        ],
        "test:coverage-html": [
            "vendor/bin/phpunit --coverage-html=./tests/report/html"
        ],
        "test:coverage-clover": [
            "vendor/bin/phpunit --coverage-clover=./tests/report/coverage.clover"
        ],
        "lint": [
            "vendor/bin/phpcs -p --standard=PSR2 --warning-severity=0 src/ tests/"
        ],
        "lint:auto-fix": [
            "vendor/bin/phpcbf -p --standard=PSR2 src/ tests/"
        ]
    }
}
